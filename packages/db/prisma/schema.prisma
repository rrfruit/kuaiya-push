// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id             String    @id @default(cuid())
  platform       String
  proxyId        String?
  displayName    String
  coverUrl       String?
  platformUserId String?
  isActive       Boolean   @default(true)
  isLoggedIn     Boolean   @default(false)
  lastSyncedAt   DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  proxy     Proxy?               @relation(fields: [proxyId], references: [id], onDelete: SetNull)
  publishes WorkPublishAccount[]

  @@unique([platform, platformUserId])
}

enum WorkType {
  TEXT
  IMAGE
  VIDEO
}

model Work {
  id          String   @id @default(cuid())
  type        WorkType @default(VIDEO)
  title       String
  description String?
  content     String?
  coverUrl    String?
  imgs        String?
  mediaUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  publishes WorkPublish[]
}

enum PublishStatus {
  PENDING
  IN_PROGRESS
  SUCCESS
  FAILED
  CANCELLED
}

model WorkPublish {
  id          String        @id @default(cuid())
  workId      String
  isImmediate Boolean       @default(true)
  status      PublishStatus @default(PENDING)
  scheduledAt DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  accounts WorkPublishAccount[]
  work     Work                 @relation(fields: [workId], references: [id], onDelete: Cascade)

  @@index([status])
}

model WorkPublishAccount {
  id           String        @id @default(cuid())
  publishId    String
  accountId    String
  status       PublishStatus @default(PENDING)
  isSuccess    Boolean       @default(false)
  errorMessage String?
  startedAt    DateTime?
  publishedAt  DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  publish WorkPublish @relation(fields: [publishId], references: [id], onDelete: Cascade)
  account Account     @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([publishId, accountId])
  @@index([status])
}

enum ProxyType {
  HTTP
  HTTPS
  SOCKS5
}

model Proxy {
  id         String    @id @default(cuid())
  name       String?
  type       ProxyType @default(HTTP)
  host       String
  port       Int
  username   String?
  password   String?
  isActive   Boolean   @default(true)
  location   String?
  lastUsedAt DateTime?
  expireAt   DateTime?
  remark     String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  accounts Account[]
}

enum FileType {
  IMAGE
  VIDEO
}

model UploadFile {
  id          String   @id @default(cuid())
  filename    String // 原始文件名
  storageName String // 存储文件名（避免重名）
  path        String // 存储路径
  mimeType    String // MIME 类型
  size        Int // 文件大小（字节）
  type        FileType // 文件类型
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
