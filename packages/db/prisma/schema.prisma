// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id             String    @id @default(cuid())
  platformCode   String
  proxyId        String?
  displayName    String
  coverUrl       String?
  platformUserId String?
  isActive       Boolean   @default(true)
  isLoggedIn     Boolean   @default(false)
  lastSyncedAt   DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  proxy   Proxy?              @relation(fields: [proxyId], references: [id], onDelete: SetNull)
  publishes WorkPublish[]

  @@unique([platformCode, platformUserId])
}

enum WorkType {
  TEXT
  IMAGE
  VIDEO
}

model Work {
  id          String   @id @default(cuid())
  title       String
  type        WorkType @default(TEXT)
  description String
  mediaUrl    String
  coverUrl    String?
  content     String?
  imgs        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  publishes WorkPublish[]
}

enum PublishStatus {
  PENDING
  IN_PROGRESS
  SUCCESS
  FAILED
  CANCELLED
}

model WorkPublish {
  id           String        @id @default(cuid())
  workId       String
  accountId    String
  isImmediate  Boolean       @default(true)
  status       PublishStatus @default(PENDING)
  scheduledAt  DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  platforms WorkPublishPlatform[]

  work    Work    @relation(fields: [workId], references: [id], onDelete: Cascade)
  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([workId, accountId])
  @@index([status])
}

model WorkPublishPlatform {
  id           String        @id @default(cuid())
  publishId    String
  platformCode String        @unique
  status       PublishStatus @default(PENDING)
  isSuccess    Boolean       @default(false)
  errorMessage String?
  startedAt    DateTime?
  publishedAt  DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  publish WorkPublish @relation(fields: [publishId], references: [id], onDelete: Cascade)

  @@index([platformCode])
  @@index([status])
}

enum ProxyType {
  HTTP
  HTTPS
  SOCKS5
}

model Proxy {
  id         String    @id @default(cuid())
  name       String?
  type       ProxyType @default(HTTP)
  host       String
  port       Int
  username   String?
  password   String?
  isActive   Boolean   @default(true)
  location   String?
  lastUsedAt DateTime?
  expireAt   DateTime?
  remark     String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  accounts Account[]
}
